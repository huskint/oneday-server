{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2020",
      "dom"
    ],
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
  }
}
